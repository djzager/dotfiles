# Basic Definitions
  set $mod Mod4
  set $term --no-startup-id gnome-terminal
  #font pango: Source Code Pro 10
  #font pango:DejaVu Sans Mono 9
  font pango: Noto Sans 9, FontAwesome 10
  for_window [class="^.*"] border pixel 2
  hide_edge_borders smart

  # Use Mouse+$mod to drag floating windows to their wanted position
  floating_modifier $mod

  set $workspace1 "1: "
  set $workspace2 "2: "

# Startup
   # Wallpaper
  exec --no-startup-id feh --bg-fill ~/wallpaper
  # Turn off touchpad
  exec --no-startup-id synclient TouchpadOff=1
  # Notifications
  exec --no-startup-id dunst

# Colors
  set_from_resource $darkblack    color0  #181818
  set_from_resource $black        color8  #585858
  set_from_resource $darkred      color1  #ab4642
  set_from_resource $red          color9  #fb4934
  set_from_resource $darkgreen    color2  #a1b56c
  set_from_resource $green        color10 #282828
  set_from_resource $darkyellow   color3  #f7ca88
  set_from_resource $yellow       color11 #383838
  set_from_resource $darkblue     color4  #7cafc2
  set_from_resource $blue         color12 #b8b8b8
  set_from_resource $darkmagenta  color5  #ba8baf
  set_from_resource $magenta      color13 #e8e8e8
  set_from_resource $darkcyan     color6  #86c1b9
  set_from_resource $cyan         color14 #a16946
  set_from_resource $darkwhite    color7  #d8d8d8
  set_from_resource $white        color15 #f8f8f8
  set $transparent  #00000000

  #                       BORDER        BACKGROUND    TEXT      INDICATOR       CHILD_BORDER
  client.focused          $red          $red          $white    $darkmagenta    $darkblue
  client.unfocused        $transparent  $darkblack    $white    $darkblue       $darkblack
  client.focused_inactive $transparent  $blue         $white    $darkblue       $darkblack
  client.urgent           $darkred      $darkred      $black    $darkred        $darkred
  client.background       $black

# Bar
  bar {
    position top
    #mode hide
    tray_output none
    status_command i3status
    colors {
      background $darkblack
      statusline $darkblack
      separator $darkblack
      #                  BORDER       BACKGROUND     TEXT
      focused_workspace  $red         $red           $white
      active_workspace   $blue        $blue          $darkwhite
      inactive_workspace $darkblack   $darkblack     $white
      urgent_workspace   $darkblack   $darkblack     $white
    }
  }

# Key Bindings
  bindsym $mod+Return         exec $term
  bindsym $mod+Shift+space    floating toggle
  bindsym $mod+space          focus mode_toggle
  bindsym $mod+d              exec dmenu_run
  bindsym $mod+i              exec $term -- htop
  bindsym $mod+o              exec $term -- ranger
  bindsym $mod+m              exec --no-startup-id flatpak run com.spotify.Client
  bindsym $mod+Shift+q        kill

  # XF86 Keys
  bindsym XF86AudioMute exec amixer set Master toggle
  bindsym XF86AudioLowerVolume exec amixer set Master 5%-
  bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
  bindsym XF86MonBrightnessUp exec xbacklight +5
  bindsym XF86MonBrightnessDown exec xbacklight -5
  bindsym XF86WLAN exec zwifi

# Workspace Management
  # switch to workspace
  bindsym $mod+1 workspace $workspace1
  bindsym $mod+2 workspace $workspace2
  bindsym $mod+3 workspace 3
  bindsym $mod+4 workspace 4
  bindsym $mod+5 workspace 5
  bindsym $mod+6 workspace 6
  bindsym $mod+7 workspace 7
  bindsym $mod+8 workspace 8
  bindsym $mod+9 workspace 9
  bindsym $mod+0 workspace 10

  # move focused container to workspace
  bindsym $mod+Shift+1 move container to workspace $workspace1
  bindsym $mod+Shift+2 move container to workspace $workspace2
  bindsym $mod+Shift+3 move container to workspace 3
  bindsym $mod+Shift+4 move container to workspace 4
  bindsym $mod+Shift+5 move container to workspace 5
  bindsym $mod+Shift+6 move container to workspace 6
  bindsym $mod+Shift+7 move container to workspace 7
  bindsym $mod+Shift+8 move container to workspace 8
  bindsym $mod+Shift+9 move container to workspace 9
  bindsym $mod+Shift+0 move container to workspace 10

# Window Management
  # change|move focus
  bindsym $mod+h focus left
  bindsym $mod+Shift+h move left 30
  bindsym $mod+k focus down
  bindsym $mod+Shift+k move down 30
  bindsym $mod+j focus up
  bindsym $mod+Shift+j move up 30
  bindsym $mod+l focus right
  bindsym $mod+Shift+l move right 30

  # enter fullscreen mode for the focused container
  bindsym $mod+f fullscreen toggle

  # change container layout (stacked, tabbed, toggle split)
  bindsym $mod+s              layout stacking
  bindsym $mod+w              layout tabbed
  bindsym $mod+e              layout toggle split

  # split
  bindsym $mod+bar            split h
  bindsym $mod+minus          split v

  # General dropdown window traits. The order can matter.
  for_window [instance="dropdown_*"] floating enable
  for_window [instance="dropdown_*"] move scratchpad
  for_window [instance="dropdown_*"] sticky enable
  for_window [instance="dropdown_*"] scratchpad show
  for_window [instance="dropdown_task"] resize set 800 450
  # last
  for_window [instance="dropdown_*"] move position center

  # Special windows
  for_window [class="Spotify"] move to workspace 10
  for_window [class="Bluejeans"] move to workspace 9

# i3 Modes
  # Resize Windows
  set $mode_resize Resize control: (h) shrink width, (k) grow height, (j) shrink height, (l) grow width
  bindsym $mod+r mode "$mode_resize"
  mode "$mode_resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize shrink height 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
  }

  # Brightness
  set $mode_bright Brightness control: (Shift+j) darkest, (j) darker, (k) brighter, (K) brightest
  bindsym $mod+Shift+b mode "$mode_bright"
  mode "$mode_bright" {
    bindsym Shift+j   exec --no-startup-id echo "1" | sudo tee /sys/class/backlight/intel_backlight/brightness
    bindsym j         exec --no-startup-id xbacklight -5
    bindsym k         exec --no-startup-id xbacklight +5
    bindsym Shift+k   exec --no-startup-id xbacklight -set 100

    bindsym Return mode "default"
    bindsym Escape mode "default"
  }

  # Volume Config
  set $mode_volume Volume control: (k) volume up, (j) volume down, (x) toggle mute
  bindsym $mod+Shift+v mode "$mode_volume"
  mode "$mode_volume" {
    bindsym k exec --no-startup-id amixer set Master 5%+
    bindsym j exec --no-startup-id amixer set Master 5%-
    bindsym x exec --no-startup-id amixer set Master toggle

    bindsym Return mode "default"
    bindsym Escape mode "default"
  }

  # i3 Config
  set $mode_i3 i3 control: (r)eload, (Shift+r)estart
  bindsym $mod+Shift+i mode "$mode_i3"
  mode "$mode_i3" {
    bindsym r        reload
    bindsym Shift+r  restart

    bindsym Return mode "default"
    bindsym Escape mode "default"
  }

  # Set shut down, restart and locking features
  set $mode_system System control: (l)ock, (e)xit, (r)eboot, (Shift+s)hutdown
  bindsym $mod+Shift+s mode "$mode_system"
  mode "$mode_system" {
    bindsym l exec --no-startup-id zlock, mode "default"
    bindsym e exec --no-startup-id exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'", mode "default"
    bindsym r exec --no-startup-id reboot, mode "default"
    bindsym Shift+s exec --no-startup-id shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
  }

