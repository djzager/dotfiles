# Audio Keys
XF86AudioMute
	changevolume mute
{_,shift +} XF86Audio{Lower,Raise}Volume
	changevolume {down, min, up, max}
XF86AudioMicMute
	changevolume micmute

# Brightness
{_,shift +} XF86MonBrightness{Down,Up}
	changebrightness {-,min,+,max}

# Wifi key
XF86WLAN
	wifi_toggle

# Status
super + shift + t
	timehack
super + shift + v
	volumehack
super + shift + p
	powerhack

super + shift + d
	displayselect

super + shift + b
	${BROWSER}

# System
super + shift + x
	dmenuprompt "Shutdown computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
	dmenuprompt "Reboot?" "sudo -A shutdown -r now"
super + shift + e
	dmenuprompt 'Leave Xorg?' 'killall Xorg'
