# Audio Keys
XF86AudioMute
	changevolume mute
{_,shift +} XF86Audio{Lower,Raise}Volume
	changevolume {down, min, up, max}
XF86AudioMicMute
	changevolume micmute

# Brightness
{_,shift +} XF86MonBrightness{Down,Up}
	changebrightness {-,min,+,max}

# Wifi key
XF86WLAN
	wifi_toggle

# Status
super + shift + t
	timehack
super + shift + v
	volumehack
super + shift + p
	powerhack

super + shift + d
	displayselect

super + shift + b
	${BROWSER}

# System
super + shift + q
	powermenu
super + shift + l
  slock

# Dunst
ctrl + space
  dunstctl close

ctrl + shift + space
  dunstctl close-all

ctrl + grave
  dunstctl history-pop

ctrl + shift + period
  dunstctl context
