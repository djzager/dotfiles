#!/bin/bash

function send_notification() {
	brightness=$(printf "%.0f\n" $(brillo -G))
	dunstify -a "changebrightness" -u low -r 9991 -h int:value:"$brightness" -i "brightness-$1" "Brightness: $brightness%" -t 2000
}

case $1 in
up)
	brillo -A 5
	ddcutil setvcp 10 + 5
	send_notification $1
	;;
max)
	brillo -S 100 -q
	ddcutil setvcp 10 100
	send_notification $1
	;;
down)
	brillo -U 5
	ddcutil setvcp 10 - 5
	send_notification $1
	;;
min)
	brillo -S 1
	ddcutil setvcp 10 1
	send_notification $1
	;;
esac
